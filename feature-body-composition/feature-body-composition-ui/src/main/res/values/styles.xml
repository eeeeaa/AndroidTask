<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:padding">@dimen/size8</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="HeaderLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:paddingStart">@dimen/size8</item>
        <item name="android:paddingEnd">@dimen/size8</item>
        <item name="android:paddingBottom">@dimen/size8</item>
        <item name="android:singleLine">false</item>
    </style>
</resources>
