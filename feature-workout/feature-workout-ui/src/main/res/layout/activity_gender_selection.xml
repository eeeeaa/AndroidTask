<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/genderSelectionConstraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    tools:context=".UserSetupActivity">

    <com.hitenderpannu.workout.ui.GenderSelectionButton
        android:id="@+id/icon_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/gender_icon_padding"
        android:background="@drawable/gender_background"
        app:srcCompat="@drawable/ic_male"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/icon_female"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.hitenderpannu.workout.ui.GenderSelectionButton
        android:id="@+id/icon_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/gender_icon_padding"
        android:background="@drawable/gender_background"
        app:srcCompat="@drawable/ic_female"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icon_male"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.hitenderpannu.workout.ui.AgePickerView
        android:id="@+id/agePickerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/gunmetal"
        android:alpha="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/gunmetal"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        app:layout_constraintTop_toTopOf="@+id/button_back"
        app:layout_constraintLeft_toRightOf="@+id/button_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_continue"
        android:text="Continue"
        android:textSize="18sp"
        android:gravity="center"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_back"
        app:layout_constraintLeft_toRightOf="@+id/divider2"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
