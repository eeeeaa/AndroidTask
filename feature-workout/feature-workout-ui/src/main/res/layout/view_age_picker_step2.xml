<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintAgePicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_age_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Please Select Your Age"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/text_previous_age"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_previous_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:alpha="0.3"
        android:text="24"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/age_selected_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/age_selected_top"
        android:layout_width="72dp"
        android:layout_height="2dp"
        android:layout_marginBottom="16dp"
        android:background="@color/gunmetal"
        app:layout_constraintBottom_toTopOf="@+id/text_selected_age"
        app:layout_constraintLeft_toLeftOf="@+id/text_selected_age"
        app:layout_constraintRight_toRightOf="@+id/text_selected_age" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_selected_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/age_selected_bottom"
        android:layout_width="72dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/gunmetal"
        app:layout_constraintLeft_toLeftOf="@+id/text_selected_age"
        app:layout_constraintRight_toRightOf="@+id/text_selected_age"
        app:layout_constraintTop_toBottomOf="@+id/text_selected_age" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_next_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.3"
        android:text="26"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_selected_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
