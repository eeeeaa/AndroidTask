<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/auth_background"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:shadowColor="#333"
            android:shadowDy="12"
            android:shadowRadius="8"
            android:text="Login with social account"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="#fff"
            />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="social login"
            android:src="@drawable/social_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OR"
            android:shadowColor="#333"
            android:shadowDy="12"
            android:shadowRadius="8"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="Not a member yet ? Sign up for free"
            android:textColor="#4FBBC4"
            android:shadowColor="#333"
            android:shadowDy="12"
            android:shadowRadius="8"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="login"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:backgroundTint="#fff"
            android:hint="EMAIL OR PHONE NUMBER"
            android:shadowColor="#333"
            android:shadowDy="8"
            android:shadowRadius="8"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textColorHint="#fff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="42dp"
            android:backgroundTint="#fff"
            android:hint="PASSWORD"
            android:shadowColor="#333"
            android:shadowDy="8"
            android:shadowRadius="8"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textColorHint="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="18dp"
            android:layout_marginRight="42dp"
            android:text="Forget password?"
            android:textColor="#4FBBC4"
            android:textSize="12sp"
            android:shadowColor="#333"
            android:shadowDy="8"
            android:shadowRadius="8"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/circular_button_dark"
            android:text="Login"
            android:shadowColor="#fff"
            android:shadowDy="8"
            android:textAllCaps="false"
            android:textColor="#333" />
    </LinearLayout>
</ScrollView>
